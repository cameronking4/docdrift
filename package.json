{
  "name": "@devinnn/docdrift",
  "version": "0.1.7",
  "private": false,
  "description": "Detect and remediate documentation drift with Devin sessions",
  "main": "dist/src/index.js",
  "bin": {
    "docdrift": "dist/src/cli.js"
  },
  "type": "commonjs",
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist/src",
    "docdrift.schema.json"
  ],
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "docs",
    "drift",
    "openapi",
    "devin",
    "github-actions"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "vitest run",
    "lint": "eslint .",
    "format": "prettier -w .",
    "openapi:export": "tsx apps/api/scripts/export-openapi.ts",
    "docs:gen": "npm run --prefix apps/docs-site docusaurus -- gen-api-docs api",
    "docs:build": "npm run --prefix apps/docs-site build",
    "docs:serve": "npm run --prefix apps/docs-site start",
    "docdrift": "tsx src/cli.ts",
    "schema:generate": "tsx scripts/generate-schema.ts",
    "prebuild": "npm run schema:generate",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@ai-sdk/gateway": "^1.0.0",
    "@inquirer/prompts": "^7.2.0",
    "@octokit/rest": "^21.1.1",
    "ai": "^4.0.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.2.1",
    "js-yaml": "^4.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.13.4",
    "eslint": "^9.20.1",
    "prettier": "^3.5.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5",
    "zod-to-json-schema": "^3.25.1"
  }
}
