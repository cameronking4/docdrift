{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/devinnn/docdrift/docdrift.schema.json",
  "title": "DocDrift Configuration",
  "description": "Repository-local config for docdrift (detect and remediate documentation drift with Devin). See docdrift-yml.md for full reference.",
  "type": "object",
  "properties": {
    "version": {
      "type": "number",
      "enum": [
        1,
        2
      ]
    },
    "specProviders": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "format": {
            "type": "string",
            "enum": [
              "openapi3",
              "swagger2",
              "graphql",
              "fern",
              "postman"
            ]
          },
          "current": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "url"
                  },
                  "url": {
                    "type": "string",
                    "format": "uri"
                  }
                },
                "required": [
                  "type",
                  "url"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "local"
                  },
                  "path": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": [
                  "type",
                  "path"
                ],
                "additionalProperties": false
              },
              {
                "type": "object",
                "properties": {
                  "type": {
                    "type": "string",
                    "const": "export"
                  },
                  "command": {
                    "type": "string",
                    "minLength": 1
                  },
                  "outputPath": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": [
                  "type",
                  "command",
                  "outputPath"
                ],
                "additionalProperties": false
              }
            ]
          },
          "published": {
            "type": "string",
            "minLength": 1
          },
          "validation": {
            "type": "object",
            "properties": {
              "enabled": {
                "type": "boolean",
                "default": true
              },
              "allowlist": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                },
                "default": []
              }
            },
            "additionalProperties": false
          }
        },
        "required": [
          "format",
          "current",
          "published"
        ],
        "additionalProperties": false
      }
    },
    "openapi": {
      "type": "object",
      "properties": {
        "export": {
          "type": "string",
          "minLength": 1
        },
        "generated": {
          "type": "string",
          "minLength": 1
        },
        "published": {
          "type": "string",
          "minLength": 1
        }
      },
      "required": [
        "export",
        "generated",
        "published"
      ],
      "additionalProperties": false
    },
    "docsite": {
      "anyOf": [
        {
          "type": "string",
          "minLength": 1
        },
        {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      ]
    },
    "exclude": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "requireHumanReview": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "default": []
    },
    "pathMappings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "match": {
            "type": "string",
            "minLength": 1
          },
          "impacts": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            },
            "minItems": 1
          }
        },
        "required": [
          "match",
          "impacts"
        ],
        "additionalProperties": false
      },
      "default": []
    },
    "mode": {
      "type": "string",
      "enum": [
        "strict",
        "auto"
      ],
      "default": "strict"
    },
    "branchPrefix": {
      "type": "string",
      "minLength": 1,
      "default": "docdrift"
    },
    "branchStrategy": {
      "type": "string",
      "enum": [
        "single",
        "per-pr"
      ],
      "default": "single"
    },
    "lastKnownBaseline": {
      "type": "string",
      "minLength": 1
    },
    "devin": {
      "type": "object",
      "properties": {
        "apiVersion": {
          "type": "string",
          "const": "v1"
        },
        "unlisted": {
          "type": "boolean",
          "default": true
        },
        "maxAcuLimit": {
          "type": "integer",
          "exclusiveMinimum": 0,
          "default": 2
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "default": [
            "docdrift"
          ]
        },
        "customInstructions": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "customInstructionContent": {
          "type": "string"
        },
        "prStrategy": {
          "type": "string",
          "enum": [
            "commit-to-branch",
            "separate-pr"
          ],
          "default": "commit-to-branch"
        }
      },
      "required": [
        "apiVersion"
      ],
      "additionalProperties": false
    },
    "policy": {
      "type": "object",
      "properties": {
        "prCaps": {
          "type": "object",
          "properties": {
            "maxPrsPerDay": {
              "type": "integer",
              "exclusiveMinimum": 0,
              "default": 1
            },
            "maxFilesTouched": {
              "type": "integer",
              "exclusiveMinimum": 0,
              "default": 12
            }
          },
          "additionalProperties": false
        },
        "confidence": {
          "type": "object",
          "properties": {
            "autopatchThreshold": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "default": 0.8
            }
          },
          "additionalProperties": false
        },
        "allowlist": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1
        },
        "verification": {
          "type": "object",
          "properties": {
            "commands": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              },
              "minItems": 1
            }
          },
          "required": [
            "commands"
          ],
          "additionalProperties": false
        },
        "slaDays": {
          "type": "integer",
          "minimum": 0,
          "default": 7
        },
        "slaLabel": {
          "type": "string",
          "minLength": 1,
          "default": "docdrift"
        },
        "allowNewFiles": {
          "type": "boolean",
          "default": false
        }
      },
      "required": [
        "prCaps",
        "confidence",
        "allowlist",
        "verification"
      ],
      "additionalProperties": false
    },
    "docAreas": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1
          },
          "mode": {
            "type": "string",
            "enum": [
              "autogen",
              "conceptual"
            ]
          },
          "owners": {
            "type": "object",
            "properties": {
              "reviewers": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                },
                "minItems": 1
              }
            },
            "required": [
              "reviewers"
            ],
            "additionalProperties": false
          },
          "detect": {
            "type": "object",
            "properties": {
              "openapi": {
                "type": "object",
                "properties": {
                  "exportCmd": {
                    "type": "string",
                    "minLength": 1
                  },
                  "generatedPath": {
                    "type": "string",
                    "minLength": 1
                  },
                  "publishedPath": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "required": [
                  "exportCmd",
                  "generatedPath",
                  "publishedPath"
                ],
                "additionalProperties": false
              },
              "paths": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "match": {
                      "type": "string",
                      "minLength": 1
                    },
                    "impacts": {
                      "type": "array",
                      "items": {
                        "type": "string",
                        "minLength": 1
                      },
                      "minItems": 1
                    }
                  },
                  "required": [
                    "match",
                    "impacts"
                  ],
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          },
          "patch": {
            "type": "object",
            "properties": {
              "targets": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "requireHumanConfirmation": {
                "type": "boolean",
                "default": false
              }
            },
            "additionalProperties": false
          }
        },
        "required": [
          "name",
          "mode",
          "owners",
          "detect",
          "patch"
        ],
        "additionalProperties": false
      },
      "default": []
    }
  },
  "required": [
    "version",
    "devin",
    "policy"
  ],
  "additionalProperties": false
}
